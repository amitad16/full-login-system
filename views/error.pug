extends layout

block stylesheets
  link(rel='stylesheet', href='/stylesheets/error.css')

block content
  pre #{error.stack}
  .container
    .row
      .col-md-12
        .error-template
          h1
            | Oops!
          h2
            | #{error.status} #{message}
          .error-details
            | Sorry, an error has occured, Requested page not found!
          .error-actions
            a.btn.btn-primary.btn-lg(href='/')
              span.glyphicon.glyphicon-home
              |                         Take Me Home
            a.btn.btn-default.btn-lg(href='/user/login')
              span.glyphicon.glyphicon-envelope
              |  Login