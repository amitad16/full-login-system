extends layout

block content
    .container
        != messages()
        form.comment-form(method='post', action='/forgotPassword')
            .form-group
                label(for='email') Email
                input#email.form-control(type='email', name='email', placeholder='Email')
                if (errors)
                    if (errors.username)
                        .text-danger= errors.username.msg

            button.btn.btn-primary.mb-2(type='submit') Send
        p Don't have an account?
            a(href='/register') Register