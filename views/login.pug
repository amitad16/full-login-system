extends layout

block content
    .container
        != messages()
        form.comment-form(method='post', action='/login')
            .form-group
                label(for='username') Username
                input#username.form-control(type='text', name='username', placeholder='Username')
                if (errors)
                    if (errors.username)
                        .text-danger= errors.username.msg
            .form-group
                label(for='password') Password
                input#password.form-control(type='password', name='password', placeholder='Password')
                if (errors)
                    if (errors.password)
                        .text-danger= errors.password.msg

            button.btn.btn-primary.mb-2(type='submit') Login
            a(href='/forgotPassword') Forgot Password?
        p Don't have an account?
            a(href='/register') Register